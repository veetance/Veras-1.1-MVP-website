{
  "extends": [
    "development"
  ],
  "hints": {
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "height: fit-content",
          "backdrop-filter",
          "aspect-ratio",
          "scale",
          "width: fit-content",
          "max-height: fit-content",
          "min-height: fit-content",
          "scroll-behavior",
          "min-width: fit-content"
        ]
      }
    ],
    "axe/text-alternatives": [
      "default",
      {
        "image-alt": "off"
      }
    ],
    "axe/name-role-value": [
      "default",
      {
        "link-name": "off"
      }
    ],
    "compat-api/html": [
      "default",
      {
        "ignore": [
          "meta[name=theme-color]"
        ]
      }
    ],
    "disown-opener": "off",
    "no-protocol-relative-urls": "off"
  }
}